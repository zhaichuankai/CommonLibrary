<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorTransparent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_root"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="17dp"
        android:background="@drawable/shape_white_solid_10"
        android:gravity="center_horizontal"
        android:minHeight="219dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_cancel"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:src="#000000" />

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="141dp"
            android:layout_height="88dp"
            android:layout_marginTop="10dp"
            android:src="#000000" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="PingFangSC"
            android:gravity="center"
            android:text="提示"
            android:textColor="#FF333333"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="SourceHanSansCN"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:lineSpacingExtra="3dp"
            android:text="您今天的识别次数已用完，请先获取次数\n或者明天再试哦"
            android:textColor="#FF999999"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="23dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_top"
                android:layout_width="190dp"
                android:layout_height="45dp">

                <TextView
                    android:id="@+id/tv_top"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="5dp"
                    android:background="#000000"
                    android:fontFamily="SourceHanSansCN"
                    android:gravity="center"
                    android:text="开通会员（不限次数）"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/img_top_right"
                    android:layout_width="33dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:src="#000000" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_bottom"
                android:layout_width="190dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="23dp"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:background="#000000"
                    android:fontFamily="SourceHanSansCN"
                    android:gravity="center"
                    android:text="观看视频（获取3次）"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
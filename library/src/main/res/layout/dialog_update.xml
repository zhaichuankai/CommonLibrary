<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorTransparent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_root"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_solid_10"
        android:minHeight="300dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:gravity="center_horizontal"
            android:text="【v1.1.0】新版上线"
            android:textColor="#333333"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:lineSpacingExtra="10dp"
            android:paddingLeft="49dp"
            android:paddingTop="20dp"
            android:paddingRight="49dp"
            android:text="新增功能： 1.功能1功能1功能1功能1功能1 2.功能2功能3功能4功能4功能4 修复Bug: 1.bug1bug1bug1bug1bug1bug"
            android:textColor="#333333"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_sure"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:background="#000000"
            android:gravity="center"
            android:text="立即升级"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_cancel"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="19dp"
        android:src="#000000" />


</LinearLayout>
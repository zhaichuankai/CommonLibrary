<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/colorTransparent"
    android:orientation="vertical">

  <LinearLayout
      android:layout_width="276dp"
      android:orientation="vertical"
      android:background="@drawable/shape_white_solid_10"
      android:layout_height="wrap_content">
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingTop="10dp"
          android:paddingRight="17dp">

          <TextView
              android:id="@+id/tv_selected_type"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:layout_marginTop="5dp"
              android:text="支付方式"
              android:textColor="#333333"
              android:textStyle="bold"
              android:textSize="16sp" />

      </RelativeLayout>

      <LinearLayout
          android:id="@+id/ll_alipay"
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:gravity="center_vertical"
          android:layout_marginTop="15dp"
          android:orientation="horizontal">

          <ImageView
              android:layout_width="25dp"
              android:layout_height="25dp"
              android:layout_marginLeft="10dp"
     />

          <TextView
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginLeft="10dp"
              android:layout_weight="1"
              android:text="支付宝"
              android:textColor="#ff272727"
              android:textSize="14sp" />

          <TextView
              android:id="@+id/tv_alipay_price"
              android:layout_width="wrap_content"
              android:layout_marginRight="9dp"
              android:layout_height="wrap_content"
              android:text="¥4.99 "
              android:textSize="12sp"
              android:textColor="#FF333333"
              android:fontFamily="PingFangSC"
              android:gravity="right" />

          <ImageView
              android:id="@+id/img_alipay"
              android:layout_width="20dp"
              android:layout_height="20dp"
              android:layout_marginRight="10dp"
       />

      </LinearLayout>

      <View
          android:id="@+id/view_line"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="#eeeeee" />

      <LinearLayout
          android:id="@+id/ll_wechat"
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:gravity="center_vertical"
          android:orientation="horizontal">

          <ImageView
              android:layout_width="25dp"
              android:layout_height="25dp"
              android:layout_marginLeft="10dp"
               />

          <TextView
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginLeft="10dp"
              android:layout_weight="1"
              android:text="微信支付"
              android:textColor="#ff272727"
              android:textSize="14sp" />

          <TextView
              android:id="@+id/tv_wechat_price"
              android:layout_width="wrap_content"
              android:layout_marginRight="9dp"
              android:layout_height="wrap_content"
              android:text="¥4.99 "
              android:textSize="12sp"
              android:textColor="#FF333333"
              android:fontFamily="PingFangSC"
              android:gravity="right" />


          <ImageView
              android:id="@+id/img_wechat"
              android:layout_width="20dp"
              android:layout_height="20dp"
              android:layout_marginRight="10dp"
           />

      </LinearLayout>

      <Button
          android:id="@+id/tv_pay"
          android:layout_width="134dp"
          android:layout_height="32dp"
          android:layout_marginLeft="18dp"
          android:layout_marginTop="20dp"
          android:layout_marginRight="18dp"
          android:layout_marginBottom="20dp"
          android:gravity="center"
          android:text="立即开通"
          android:textColor="#ffffff"
          android:background="#000000"
          android:layout_gravity="center_horizontal"
          android:textSize="16sp"
       />
  </LinearLayout>

</LinearLayout>